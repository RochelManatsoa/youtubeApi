{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}


<h1 class="mb-4">Formations</h1>
<div class="row">
    {% for item in videos %}
        <div class="col-md-4 mb-4">
            <div class="card shadow" style="height: 100%;">
                {# <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{ item.id }}" allowfullscreen></iframe>
                </div> #}

                <img class="card-img img-fluid" src="{{ item.snippet.thumbnails.high.url}}">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ item.snippet.title }}</h5>
                    <p class="card-text">{{ item.snippet.description }}</p>
                    <p class="card-text mt-auto">
                        <small class="text-muted">{{ item.snippet.channelTitle }}</small><br>
                        <small class="text-muted">Vues : {{ item.statistics.viewCount }} vues | {{ item.timeDiff }}</small>
                    </p>
                </div>
            </img>
        </div>
        {% if loop.index is divisible by(3) %}
            </div><div class="row">
        {% endif %}
    </div>
    {% endfor %}
</div>

{% endblock %}
